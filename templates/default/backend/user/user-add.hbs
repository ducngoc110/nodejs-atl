<form action="/user-add" class="uk-form-stacked" id="user_edit_form" method="post">
    <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-large-7-10">
            <div class="md-card">
                <div class="user_heading" data-uk-sticky="{ top: 48, media: 960 }">
                    <div class="user_heading_avatar fileinput fileinput-new" data-provides="fileinput">
                        <div class="fileinput-new thumbnail">
                            <img src="/assets/backend/img/blank.png" alt="user avatar"/>
                        </div>
                        <div class="fileinput-preview fileinput-exists thumbnail"></div>
                        <div class="user_avatar_controls">
                            <span class="btn-file">
                                <span class="fileinput-new"><i class="material-icons">&#xE2C6;</i></span>
                                <span class="fileinput-exists"><i class="material-icons">&#xE86A;</i></span>
                                <input type="file" name="user_edit_avatar_control" id="user_edit_avatar_control">
                            </span>
                            <a href="#" class="btn-file fileinput-exists" data-dismiss="fileinput"><i class="material-icons">&#xE5CD;</i></a>
                        </div>
                    </div>
                    <input type="hidden" name="_id" value="{{# if user._id}}{{user._id}}{{/ if}}">
                    <div class="user_heading_content">
                        <h2 class="heading_b">
                            <span class="uk-text-truncate" id="user_edit_uname">{{ pageTitle }}
                            </span>
                            <span class="sub-heading" id="user_edit_position"></span>
                        </h2>
                    </div>
                    <button type="submit" class="md-fab md-fab-small md-fab-success" id="user_edit_submit">
                        <i class="material-icons">&#xE161;</i>
                    </button>
                </div>
                <div class="user_content">
                    <ul id="user_edit_tabs" class="uk-tab" data-uk-tab="{connect:'#user_edit_tabs_content'}">
                        <li class="uk-active"><a href="#">Account</a></li>
                        <li><a href="#">Basic</a></li>
                    </ul>
                    <ul id="user_edit_tabs_content" class="uk-switcher uk-margin">
                        <li aria-hidden="false" class="uk-active">
                            <div class="uk-margin-top">
                                <div class="uk-grid atl-user-account" data-uk-grid-margin="">
                                    <div class="uk-width-medium-1-1">
                                        <div class="md-input-wrapper{{# if user.email}} md-input-filled{{/ if}}"><label>Email</label>
                                            <input class="md-input" type="email" name="email" value="{{# if user.email}}{{user.email}}{{/ if}}">
                                            <span class="md-input-bar"></span>
                                        </div>
                                    </div>
                                    <div class="uk-width-medium-1-2 uk-grid-margin">
                                        <div class="md-input-wrapper{{# if user.password}} md-input-filled{{/ if}}">
                                            <label>Password</label>
                                            <input class="md-input" type="password" name="password" value="{{# if user.password}}{{user.password}}{{/ if}}"> <a href="#" class="uk-form-password-toggle" data-uk-form-password="">Show</a>
                                            <span class="md-input-bar"></span>
                                        </div>
                                    </div>
                                    <div class="uk-width-medium-1-2 uk-grid-margin">
                                        <div class="md-input-wrapper{{# if user.password}} md-input-filled{{/ if}}">
                                            <label for="user_edit_position_control">Confirm password</label>
                                            <input class="md-input" type="password" name="password_cf" value="{{# if user.password}}{{user.password}}{{/ if}}"> <a href="#" class="uk-form-password-toggle" data-uk-form-password="">Show</a>
                                            <span class="md-input-bar"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li aria-hidden="false" class="uk-active">
                            <div class="uk-margin-top">
                                <h3 class="full_width_in_card heading_c">
                                    General info
                                </h3>
                                <div class="uk-grid" data-uk-grid-margin="">
                                    <div class="uk-width-medium-1-2">
                                        <div class="md-input-wrapper{{# if user.meta.name}} md-input-filled{{/ if}}"><label>User name</label><input class="md-input" type="text" name="name" value="{{# if user.meta.name}}{{user.meta.name}}{{/ if}}"></span></div>
                                    </div>
                                    <div class="uk-width-medium-1-2">
                                        <div class="uk-input-group">
                                            <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar"></i></span>
                                            <div class="md-input-wrapper{{# if user.meta.birthday}} md-input-filled{{/ if}}">
                                                <label>Birthday</label>
                                                <input class="md-input" type="text" name="birthday" value="{{# if user.meta.birthday}}{{user.meta.birthday}}{{/ if}}" data-uk-datepicker="{format:'DD.MM.YYYY'}"> <span class="md-input-bar"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="uk-grid" data-uk-grid-margin="">
                                    <div class="uk-width-1-1">
                                        <div class="md-input-wrapper{{# if user.meta.more}} md-input-filled{{/ if}}"><label>More information</label><textarea class="md-input" name="more">{{# if user.meta.more}}{{user.meta.more}}{{/ if}}</textarea><span class="md-input-bar"></span></div>
                                    </div>
                                </div>
                                <h3 class="full_width_in_card heading_c">
                                    Contact info
                                </h3>
                                <div class="uk-grid">
                                    <div class="uk-width-1-1">
                                        <div class="uk-grid uk-grid-width-1-1 uk-grid-width-large-1-2" data-uk-grid-margin="">
                                            <div>
                                                <div class="uk-input-group">
                                                    <span class="uk-input-group-addon">
                                                        <i class="md-list-addon-icon material-icons material-icons">home</i>
                                                    </span>
                                                    <div class="md-input-wrapper{{# if user.meta.address}} md-input-filled{{/ if}}"><label>Address</label><input class="md-input" type="text" name="address" value="{{# if user.meta.address}}{{user.meta.address}}{{/ if}}"><span class="md-input-bar"></span></div>
                                                </div>
                                            </div>
                                            <div>
                                                <div class="uk-input-group">
                                                    <span class="uk-input-group-addon">
                                                        <i class="md-list-addon-icon material-icons">ÓÉç</i>
                                                    </span>
                                                    <div class="md-input-wrapper{{# if user.meta.phone}} md-input-filled{{/ if}}"><label>Phone Number</label><input class="md-input" type="text" name="phone" value="{{# if user.meta.phone}}{{user.meta.phone}}{{/ if}}"><span class="md-input-bar"></span></div>
                                                </div>
                                            </div>
                                            <div class="uk-grid-margin">
                                                <div class="uk-input-group">
                                                    <span class="uk-input-group-addon">
                                                        <i class="md-list-addon-icon uk-icon-facebook-official"></i>
                                                    </span>
                                                    <div class="md-input-wrapper{{# if user.meta.facebook}} md-input-filled{{/ if}}"><label>Facebook</label><input class="md-input" type="text" name="facebook" value="{{# if user.meta.facebook}}{{user.meta.facebook}}{{/ if}}"><span class="md-input-bar"></span></div>
                                                </div>
                                            </div>
                                            <div class="uk-grid-margin">
                                                <div class="uk-input-group">
                                                    <span class="uk-input-group-addon">
                                                        <i class="md-list-addon-icon uk-icon-google-plus"></i>
                                                    </span>
                                                    <div class="md-input-wrapper{{# if user.meta.google}} md-input-filled{{/ if}}"><label>Google+</label><input class="md-input" type="text" name="gplus" value="{{# if user.meta.google}}{{user.meta.google}}{{/ if}}"><span class="md-input-bar"></span></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="uk-width-large-3-10">
            <div class="md-card">
                <div class="md-card-content">
                    <h3 class="heading_c uk-margin-bottom">Other settings</h3>
                    <div class="uk-form-row">
                        <input type="checkbox" name="status" checked data-switchery id="user_edit_active" />
                        <label for="user_edit_active" class="inline-label">User Active</label>
                    </div>
                    <hr class="md-hr">
                    <div class="uk-form-row">
                        <h3 class="heading_c uk-margin-bottom">User Role</h3>
                        <select data-md-selectize name="roles">
                            <option value="">Choose job</option>
                            {{# if settings.listRoles }}
                            {{#each settings.listRoles}}
                            <option value="{{@key}}" {{# if ../user.roles}}{{#compare @key ../user.roles operator="==" }}selected{{/compare}}{{/ if}}>{{ this }}</option>
                            {{/each }}
                            {{/ if }}
                        </select>
                    </div>
                    <hr class="md-hr">
                    <div class="uk-form-row">
                        <h3 class="heading_c uk-margin-bottom">User Office</h3>
                        <select data-md-selectize name ="office">
                            <option value="">Choose Office</option>
                            {{# if settings.listOffices }}
                            {{#each settings.listOffices}}
                            <option value="{{@key}}"{{# if ../user.meta.office}}{{#compare @key ../user.meta.office operator="==" }}selected{{/compare}}{{/ if}}>{{ this }}</option>
                            {{/each }}
                            {{/ if }}
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="uk-notify uk-notify-bottom-right">
    {{# if hasErros }}
        {{# each errors}}
        <div class="uk-notify-message uk-notify-message-danger atl-notify">
            <div>{{ this }}</div>
        </div>
        {{/each }}
    {{/ if }}
    {{# if hasSuccess }}
        {{# each success}}
        <div class="uk-notify-message uk-notify-message-success atl-notify">
            <div>{{ this }}</div>
        </div>
        {{/each }}
    {{/ if }}
</div>

<script src="/assets/backend/js/atl-backend-user.js"></script>